# On Server
ssh root@education-staging.catalpa.build
DATE=`date -uI`
cd /tmp
su education -c 'mkdir -p /tmp/dbbackup-${DATE}'
su education -c 'mkdir -p /tmp/dbbackup-latest/'
su education -c 'pg_dump -Z 0 -F d education_db -f /tmp/dbbackup-${DATE}'
su education -c 'cp /tmp/dbbackup-${DATE}/* /tmp/dbbackup-latest/'


# On Client 
DATE=`date -uI`
rsync -avz root@education-staging.catalpa.build:/tmp/dbbackup-latest/ ./docker-entrypoint-initdb.d/education

# Clean up afterwards
ssh root@education-staging.catalpa.build
su education -c 'rm -rf /tmp/dbbackup-latest/'
su education -c 'rm -rf /tmp/dbbackup-${DATE}/'



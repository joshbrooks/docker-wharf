# On Server
ssh root@mohinga-staging.catalpa.build
DATE=`date -uI`
cd /tmp
su mohinga -c mkdir -p /tmp/dbbackup-${DATE}
su mohinga -c pg_dump -Z 0 -F d mohinga_db -f /tmp/dbbackup-${DATE}
su mohinga -c cp /tmp/dbbackup-${DATE}/* /tmp/dbbackup-latest/


# On Client 
DATE=`date -uI`
rsync -avz root@mohinga-staging.catalpa.build:/tmp/dbbackup-latest/ ./docker-entrypoint-initdb.d/mohinga

# Clean up afterwards
ssh root@mohinga-staging.catalpa.build
rm -rf /tmp/dbbackup-latest/
rm -rf /tmp/dbbackup-${DATE}/


